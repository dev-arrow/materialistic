<ViewSwitcher
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/control_switcher"
    android:inAnimation="@anim/slide_in_up"
    android:outAnimation="@anim/slide_out_down"
    android:background="?attr/colorCardHighlight"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    tools:targetApi="lollipop">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/button_exit"
            android:src="@drawable/ic_clear_white_24dp"
            android:contentDescription="@string/exit_fullscreen"
            android:tint="?colorAccent"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/button_refresh"
            android:src="@drawable/ic_refresh_white_24dp"
            android:contentDescription="@string/refresh"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:tint="?android:attr/textColorPrimary"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/button_back"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:contentDescription="@string/back"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:tint="?android:attr/textColorPrimary"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/button_forward"
            android:src="@drawable/ic_arrow_forward_white_24dp"
            android:contentDescription="@string/forward"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:tint="?android:attr/textColorPrimary"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/button_zoom_out"
            android:src="@drawable/ic_zoom_out_white_24dp"
            android:contentDescription="@string/zoom_out"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:tint="?android:attr/textColorPrimary"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/button_zoom_in"
            android:src="@drawable/ic_zoom_in_white_24dp"
            android:contentDescription="@string/zoom_in"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:tint="?android:attr/textColorPrimary"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/button_find"
            android:src="@drawable/ic_search_white_24dp"
            android:contentDescription="@string/find_in_page"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:tint="?android:attr/textColorPrimary"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/button_more"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:contentDescription="@string/display_options"
            android:visibility="gone"
            tools:visibility="visible"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:tint="?android:attr/textColorPrimary"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/button_clear"
            android:src="@drawable/ic_clear_white_24dp"
            android:contentDescription="@string/clear_all"
            android:tint="?android:attr/textColorPrimary"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edittext"
            android:hint="@string/find_in_page"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/button_previous"
            android:src="@drawable/ic_expand_less_white_24dp"
            android:contentDescription="@string/previous"
            android:visibility="gone"
            tools:visibility="visible"
            android:tint="?android:attr/textColorPrimary"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/button_next"
            android:src="@drawable/ic_expand_more_white_24dp"
            android:contentDescription="@string/next"
            android:visibility="gone"
            tools:visibility="visible"
            android:tint="?android:attr/textColorPrimary"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ViewSwitcher>
