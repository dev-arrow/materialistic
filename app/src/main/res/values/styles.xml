<resources>

    <!-- ========================= -->
    <!-- Application themes        -->
    <!-- ========================= -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">?colorAccent</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse</item>
        <item name="textAppearanceSearchResultTitle">@style/AppTextAppearanceSearchResultTitle</item>
        <item name="android:textColorLink">?colorAccent</item>
        <!-- style for buttons -->
        <item name="android:buttonStyle">@style/AppButton</item>
        <!-- style for spinners -->
        <item name="android:spinnerStyle">@style/AppSpinner</item>
        <!-- Here we setting appcompat’s actionBarStyle -->
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="actionBarWidgetTheme">@style/AppActionBarWidget</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="textAppearanceLargePopupMenu">@style/AppPopupMenuLargeTextAppearance</item>
        <item name="textAppearanceSmallPopupMenu">@style/AppPopupMenuSmallTextAppearance</item>
        <item name="android:autoCompleteTextViewStyle">@style/AppAutoCompleteTextView</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
        <item name="editTextStyle">@style/AppEditText</item>

        <item name="preferenceTheme">@style/AppPreferenceThemeOverlay</item>

        <!-- custom themed attributes -->
        <item name="themedCardBackgroundColor">@color/cardview_light_background</item>
        <item name="themedCardHighlightColor">@color/colorPrimaryLight</item>
        <item name="themedDrawerBackgroundColor">@android:color/white</item>
        <item name="themedPanelBackgroundColor">@color/colorBackgroundPanel</item>
        <item name="themedTextColorPrimary">@color/textColorPrimary</item>
        <item name="themedTextColorSecondary">@color/textColorSecondary</item>
        <item name="themedTextColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="themedTextColorSecondaryInverse">@color/textColorSecondaryInverse</item>

        <!-- default text size -->
        <item name="titleTextSize">@dimen/abc_text_size_medium_material</item>
        <item name="subtitleTextSize">@dimen/abc_text_size_small_material</item>
        <item name="contentTextSize">@dimen/abc_text_size_small_material</item>
    </style>
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="colorButtonNormal">?colorAccent</item>

        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimary</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondary</item>
        <item name="textAppearanceSearchResultTitle">@style/AppTextAppearanceSearchResultTitle</item>
        <item name="android:textColorLink">?colorAccent</item>
        <!-- style for buttons -->
        <item name="android:buttonStyle">@style/AppButton</item>
        <!-- style for spinners -->
        <item name="android:spinnerStyle">@style/AppSpinner</item>
        <!-- Here we setting appcompat’s actionBarStyle -->
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="actionBarWidgetTheme">@style/AppActionBarWidget</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="textAppearanceLargePopupMenu">@style/AppPopupMenuLargeTextAppearance</item>
        <item name="textAppearanceSmallPopupMenu">@style/AppPopupMenuSmallTextAppearance</item>
        <item name="android:autoCompleteTextViewStyle">@style/AppAutoCompleteTextView</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogTheme">@style/AppAlertDialog.Dark</item>
        <item name="editTextStyle">@style/AppEditText</item>

        <item name="preferenceTheme">@style/AppPreferenceThemeOverlay</item>

        <!-- custom themed attributes -->
        <item name="themedCardBackgroundColor">@color/cardview_dark_background</item>
        <item name="themedCardHighlightColor">@color/colorHighlightInverse</item>
        <item name="themedDrawerBackgroundColor">@color/colorHighlightInverse</item>
        <item name="themedPanelBackgroundColor">@color/colorBackgroundPanelInverse</item>
        <item name="themedTextColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="themedTextColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="themedTextColorPrimaryInverse">@color/textColorPrimary</item>
        <item name="themedTextColorSecondaryInverse">@color/textColorSecondary</item>

        <!-- default text size -->
        <item name="titleTextSize">@dimen/abc_text_size_medium_material</item>
        <item name="subtitleTextSize">@dimen/abc_text_size_small_material</item>
        <item name="contentTextSize">@dimen/abc_text_size_small_material</item>
    </style>

    <!-- ========================= -->
    <!-- Action bar/toolbar styles -->
    <!-- ========================= -->
    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- force subtitle text color for v21+ -->
        <item name="subtitleTextAppearance">@style/AppToolbarSubtitleTextAppearance</item>
    </style>
    <style name="AppToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="searchViewStyle">@style/AppToolbarSearchView</item>
    </style>
    <style name="AppToolbarSubtitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">?attr/themedTextColorPrimary</item>
    </style>

    <!-- =================== -->
    <!-- Preference themes   -->
    <!-- =================== -->
    <style name="AppPreferenceThemeOverlay" parent="PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/AppPreference</item>
        <item name="preferenceHelpStyle">@style/Preference.PreferenceHelp</item>
    </style>
    <style name="AppPreference" parent="Preference">
        <item name="layout">@layout/preference</item>
    </style>
    <style name="Preference.PreferenceHelp" parent="Preference">
        <item name="android:layout">@layout/preference_help</item>
    </style>

    <!-- =================== -->
    <!-- Alert dialog themes -->
    <!-- =================== -->
    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppAlertDialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <!-- ================== -->
    <!-- Search view styles -->
    <!-- ================== -->
    <style name="AppToolbarSearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryHint">@string/title_activity_search</item>
    </style>
    <style name="AppActionBarWidget" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
    </style>
    <style name="AppAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <!-- force item selectable background for v10- -->
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>
    </style>
    <style name="AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">?attr/themedTextColorPrimary</item>
    </style>
    <style name="AppTextAppearanceSearchResultTitle" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textColor">?attr/themedTextColorPrimaryInverse</item>
    </style>
    <style name="AppPopupMenuLargeTextAppearance" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">?attr/themedTextColorPrimaryInverse</item>
    </style>
    <style name="AppPopupMenuSmallTextAppearance" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">?attr/themedTextColorPrimaryInverse</item>
    </style>

    <!-- ============= -->
    <!-- Widget styles -->
    <!-- ============= -->
    <style name="AppButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/textColorButton</item>
    </style>
    <style name="AppSpinner" parent="Widget.AppCompat.Spinner">
        <!-- Customize spinner here -->
    </style>
    <style name="AppProgressBarHorizontalStyle" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:progressDrawable">@drawable/progress</item>
    </style>
    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/themedTextColorPrimaryInverse</item>
    </style>

    <!-- =========== -->
    <!-- Text styles -->
    <!-- =========== -->
    <style name="textRankStyle">
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">?attr/themedTextColorPrimaryInverse</item>
    </style>
    <style name="textTitleStyle">
        <item name="android:textSize">?attr/titleTextSize</item>
        <item name="android:textColor">?attr/themedTextColorPrimaryInverse</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>
    <style name="textSubtitleStyle">
        <item name="android:textSize">?attr/subtitleTextSize</item>
        <item name="android:textColor">?attr/themedTextColorSecondaryInverse</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="textSubtitleStyle.Italic">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="textContentStyle">
        <item name="android:textSize">?attr/contentTextSize</item>
        <item name="android:textAppearance">@style/textAppearanceContentNormal</item>
    </style>
    <style name="textEmptyStyle">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DrawerTextStyle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">?attr/themedTextColorPrimaryInverse</item>
        <item name="android:background">@drawable/abc_item_background_holo_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
    </style>
    <style name="HeadlineTextStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">?attr/themedTextColorPrimaryInverse</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="textAppearanceContentNormal">
        <item name="android:textColor">?attr/themedTextColorPrimaryInverse</item>
    </style>
    <style name="textAppearanceContentDisabled">
        <item name="android:textColor">?attr/themedTextColorSecondaryInverse</item>
    </style>

    <!-- ========== -->
    <!-- Text sizes -->
    <!-- ========== -->
    <style name="AppTextSize">
        <item name="titleTextSize">@dimen/abc_text_size_medium_material</item>
        <item name="subtitleTextSize">@dimen/abc_text_size_small_material</item>
        <item name="contentTextSize">@dimen/abc_text_size_small_material</item>
    </style>
    <style name="AppTextSize.XSmall">
        <item name="titleTextSize">16sp</item>
        <item name="subtitleTextSize">12sp</item>
        <item name="contentTextSize">12sp</item>
    </style>
    <style name="AppTextSize.Medium">
        <item name="titleTextSize">20sp</item>
        <item name="subtitleTextSize">16sp</item>
        <item name="contentTextSize">16sp</item>
    </style>
    <style name="AppTextSize.Large">
        <item name="titleTextSize">22sp</item>
        <item name="subtitleTextSize">18sp</item>
        <item name="contentTextSize">18sp</item>
    </style>
    <style name="AppTextSize.XLarge">
        <item name="titleTextSize">24sp</item>
        <item name="subtitleTextSize">20sp</item>
        <item name="contentTextSize">20sp</item>
    </style>

    <!-- =========== -->
    <!-- Card styles -->
    <!-- =========== -->
    <style name="BaseAppCardView">
        <item name="cardBackgroundColor">?attr/themedCardBackgroundColor</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
    </style>
    <style name="AppCardView" parent="BaseAppCardView">
        <item name="android:foreground">@drawable/abc_item_background_holo_light</item>
    </style>
    <style name="FlatCardView">
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingLeft">@dimen/flat_card_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/flat_card_horizontal_margin</item>
        <item name="android:background">?attr/themedCardBackgroundColor</item>
    </style>

</resources>
